<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/CardView.Custom"
    card_view:cardCornerRadius="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/mam"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/contenedor_mam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.TextTime"
                android:text="15:30" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UEFA Europa League 2013-2014"
                android:id="@+id/text_news"
                android:gravity="center"
                style="@style/TextAppearance.TextTitleMam"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4D4D4C">
            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="130dp"
                            android:id="@+id/logo_equipo_1"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            style="@style/TextAppearance.TextGoal"
                            android:id="@+id/goles_equipo_1"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center_horizontal" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Ludogorets"
                        android:textColor="@color/color_black"
                        android:id="@+id/nombre_equipo_1"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#4D4D4C"
                    android:layout_gravity="bottom"></LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.TextGoal"
                            android:text="0"
                            android:id="@+id/goles_equipo_2"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center_horizontal" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="130dp"
                            android:id="@+id/logo_equipo_2"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Valencia"
                        android:textColor="@color/color_black"
                        android:id="@+id/nombre_equipo_2"
                        android:textSize="20dp"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Primer tiempo"
                android:id="@+id/estado_evento"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="@color/text_time"
                android:textSize="18dp"
                android:textIsSelectable="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15:01:13 HS"
                android:id="@+id/hora_estado_evento"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="@color/text_time"
                android:textSize="18dp"
                android:textIsSelectable="false" />
        </LinearLayout>

        <!--
        TODO SHARE WITH PHOTO
        <Button
            android:id="@+id/button2"
            style="@style/TextAppearance.Cards.Brief"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="COMPARTIR"/>
        -->

    </LinearLayout>

</android.support.v7.widget.CardView>

